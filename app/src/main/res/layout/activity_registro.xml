<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RegÃ­strate"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>

                        <EditText
                            android:id="@+id/etNombreCompleto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nombre_completo_hint"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etSexo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sexo_hint"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etEdad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/edad_hint"
                            android:inputType="number"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etIdentificacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/identificacion_hint"
                            android:inputType="number"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/telefono_hint"
                            android:inputType="phone"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/direccion_hint"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etEPS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/eps_hint"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etContactoEmergencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/contacto_emergencia_hint"
                            android:inputType="text"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etMedicamentosAlergias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/medicamentos_alergias_hint"
                            android:inputType="text"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etEnfermedades"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enfermedades_hint"
                            android:inputType="text"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/etTipoSanguineo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tipo_sanguineo_hint"
                            android:minHeight="48dp" />

                        <Button
                            android:id="@+id/btnRegistrarse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registrarse"
                            android:textColor="@android:color/black"
                            android:background="@drawable/rounded_corners"
                            android:padding="12dp" />

                </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/home"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:background="@drawable/home"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>